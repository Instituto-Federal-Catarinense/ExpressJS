<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title><%= titulo %></title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-title strong {
            color: #0d6efd;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="display-5 mb-4"><%= titulo %></h1>

        <% if (usuariosParaView && usuariosParaView.length > 0) { %>
            <div class="row">
                <% usuariosParaView.forEach(usuario => { %>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <strong><%= usuario.nome %></strong>
                                    <small class="text-muted fw-normal"> (ID: <%= usuario.id %>)</small>
                                </h5>
                                <p class="card-text flex-grow-1"> Idade:<%= usuario.idade %> </p>
                                <a href="#" class="btn btn-sm btn-outline-primary mt-auto">Ver Detalhes</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-warning" role="alert">
                Nenhum item para exibir no momento.
            </div>
        <% } %>

        <hr class="my-4">
        <a href="/" class="btn btn-secondary">Voltar para a p√°gina inicial</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
